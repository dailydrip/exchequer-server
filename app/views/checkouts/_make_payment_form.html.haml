= form_tag(checkouts_path, class: "pure-form") do
  %fieldset
    %div{class: "pure-u-1-4"}
      %h5
        Payment
      - if @offer.deferrable?
        = number_field_tag :amount, @balance_remaining, {min: 0.0, max: @balance_remaining, class: "pure-input-1-4"}
      - else
        = hidden_field_tag :amount, @balance_remaining
      = hidden_field_tag :offer_id, @offer.id
      -if @payment_methods.count.positive?
        %div
          %ul
            = collection_radio_buttons(nil, :payment_method_id, @payment_methods, :id, :to_s, required: :required) do |b|
              %li
                = b.label { b.radio_button(required: 'required') + " #{b.text}" }
                = link_to 'X', payment_method_path(b.value), method: :delete, id: "delete-payment-method-#{b.value}", data: {confirm: 'Are you sure?'}
        %div
          = link_to 'Add a new card', new_payment_method_path
          = render 'checkouts/payment_button'
      - else
        %div
          = link_to 'Add a Payment Method', new_payment_method_path
