%div{class: "pure-g pure-u-1"}
  - if @offer
    %h1 Buy an Offer
    %div
      %h5 Name
      = @offer.name
    %div
      %h5 Description
      = @offer.description
    %div
      %h5 Amount
      = number_to_currency(@offer.amount)
      = form_tag(checkouts_path, class: "pure-form") do
        %fieldset
          %div{class: "pure-u-1-4"}
            %h5
              Coupon
            = text_field_tag :coupon,nil, {class: "pure-input-1-4"}
            = hidden_field_tag :offer_id, @offer.id
            %button{class: "pure-button", type: "submit"}
              Apply Coupon
    - if @invoice && (@invoice.payments.count.positive? || @invoice.line_items.count.positive?)
      = render 'checkouts/invoice'
    - if @invoice.status != Invoice::PAID
      = render 'checkouts/make_payment_form'
  - else
    %h2 There are no offers.

